---
permalink: /feed.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<!-- created with help from https://validator.w3.org/feed/docs/atom.html -->
<feed xmlns="http://www.w3.org/2005/Atom">
<id>{{ meta.url }}/</id>
<link rel="self" type="application/atom+xml" href="{{ meta.url }}/feed.xml" />
<link rel="alternate" type="text/html" href="{{ meta.url }}" />
<title type="text" xml:lang="en">{{ meta.siteName }}</title>
<subtitle>{{ meta.siteDescription }}</subtitle>
<author>
	<name>{{ meta.author }}</name>
</author>
<rights type="html">{{ meta.rights | escape }}</rights>
{% set mostRecentPost = collections.piece | reverse | first %}<updated>{{ mostRecentPost.date | machineReadable }}</updated>
<icon>{{ meta.url }}/favicon-32x32.png</icon>
<generator>{{ eleventy.generator }}</generator>

{% for post in collections.piece | reverse %}
<entry>
	<id>{{ meta.url}}{{ post.url }}</id>
	<link rel="alternate" type="text/html" href="{{ meta.url}}{{ post.url }}"/>
	<title type="html">{{ post.data.title | escape }}</title>
	<summary>{{ post.data.issueLabel }} | {{ post.data.type }} | {{ post.data.size }}</summary>
	<published>{{ post.data.date | machineReadable }}</published>
	<updated>{% if post.data.date_modified %}{{ post.data.date_modified | machineReadable }}{% else %}{{ post.data.date | machineReadable }}{% endif %}</updated>
	{% if post.data.author %}{% for code_name in post.data.author %}{% for person in collections.people | personIs(code_name) %}<author>
		<name>{{ person.data.title }}</name>
	</author>{% endfor %}{% endfor %}{% endif %}
	<content type="html">{{ post.content | escape }}</content>
</entry>
{% endfor %}
</feed>